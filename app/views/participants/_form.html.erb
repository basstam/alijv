<%= form_for @participant do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation">
       <h2><%= t('activerecord.errors.template.header', :count => @participant.errors.size, :model => t('activerecord.models.singular.participant')) %></h2>
       <h4><%= t('activerecord.errors.template.body', :count => @participant.errors.size) %></h4>       
      <ul>
      <% @participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag 'Activiteit' %><br>
    <%= select_tag 'participant[activity_id]', options_from_collection_for_select(Activity.all_active, "id", "name") %>
  </div>

  <div class="field">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :street_number %><br>
    <%= f.text_field :street_number %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br>
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth, {:start_year => 1920} %>
  </div>
  <div class="field">
    <%= f.label :gender, 'V' %>
    <%= f.radio_button :gender, 'F' %>
    <%= f.label :gender, 'M' %>
    <%= f.radio_button :gender, 'M' %>
  </div>

  <div class="field">
    <%= label_tag 'Deelname afstand' %><br>
    <%= select_tag 'participant[distance]', options_for_select([ 1,2,4,8 ]), include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
