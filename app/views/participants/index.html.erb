<h1><%= t('helpers.select.list') + ' ' + t('activerecord.models.plural.participant') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.participant.firstname') %></th>
      <th><%= t('activerecord.attributes.participant.lastname') %></th>
      <th><%= t('activerecord.attributes.participant.street') %></th>
      <th><%= t('activerecord.attributes.participant.street_number') %></th>
      <th><%= t('activerecord.attributes.participant.zipcode') %></th>
      <th><%= t('activerecord.attributes.participant.city') %></th>
      <th><%= t('activerecord.attributes.participant.email') %></th>
      <th><%= t('activerecord.attributes.participant.phone') %></th>
      <th><%= t('activerecord.attributes.participant.date_of_birth') %></th>
      <th><%= t('activerecord.attributes.participant.gender') %></th>
      <th><%= t('activerecord.attributes.participant.distance') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.firstname %></td>
        <td><%= participant.lastname %></td>
        <td><%= participant.street %></td>
        <td><%= participant.street_number %></td>
        <td><%= participant.zipcode %></td>
        <td><%= participant.city %></td>
        <td><%= participant.email %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.date_of_birth %></td>
        <td><%= show_gender(participant) %></td>
        <td><%= participant.distance %></td>
        <td><%= link_to t('helpers.navigate.show'), participant %></td>
        <td><%= link_to t('helpers.navigate.edit'), edit_participant_path(participant) %></td>
        <td><%= link_to t('helpers.navigate.destroy'), participant, method: :delete, data: { confirm: t('helpers.navigate.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.navigate.new_object') + ' ' + t('activerecord.models.singular.participant') , new_participant_path %>
