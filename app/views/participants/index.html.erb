<h1>Listing participants</h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.participant.firstname') %></th>
      <th>Lastname</th>
      <th>Street</th>
      <th>Number</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.firstname %></td>
        <td><%= participant.lastname %></td>
        <td><%= participant.street %></td>
        <td><%= participant.street_number %></td>
        <td><%= participant.zipcode %></td>
        <td><%= participant.city %></td>
        <td><%= participant.email %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.date_of_birth %></td>
        <td><%= participant.gender %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

